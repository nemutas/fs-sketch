---
import { type HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'a'> {
  y: string
  md: string
}

const { y, md, ...attrs } = Astro.props
---

<a class="page-link" href={`/${y}/${md}/`} {...attrs}><img src={`thumbnails/${y}/${md}.webp`} alt={y + md} /></a>

<style lang="scss">
  .page-link {
    img {
      position: absolute;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }
</style>
